{
  "name": "@upendra.manike/event-manager",
  "version": "1.0.4",
  "description": "Safe event listener management for JavaScript/TypeScript - disposers and groups to prevent memory leaks. Type-safe event emitters, cleanup utilities, and production-ready event handling. Perfect for React, Vue, and modern web applications.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "event",
    "events",
    "event-emitter",
    "event-listener",
    "event-manager",
    "event-handling",
    "listener",
    "dispose",
    "disposer",
    "cleanup",
    "memory-leak",
    "memory-leaks",
    "event-cleanup",
    "event-disposal",
    "event-group",
    "type-safe",
    "typescript",
    "javascript",
    "nodejs",
    "browser",
    "react",
    "vue",
    "angular",
    "frontend",
    "web-development",
    "ai-agent",
    "ai-friendly",
    "llm",
    "autonomous-agent",
    "code-generation",
    "chatgpt",
    "claude",
    "copilot",
    "production-ready",
    "enterprise",
    "lightweight",
    "zero-dependencies"
  ],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
