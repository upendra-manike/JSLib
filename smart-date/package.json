{
  "name": "@upendra.manike/smart-date",
  "version": "1.0.7",
  "description": "Human-friendly date library for JavaScript/TypeScript - converts timestamps into natural language, format dates, calculate differences, add/subtract days, timezone conversion, leap year checks, age calculation, countdown, and more. Comprehensive date utilities for modern web development and AI agents.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "date",
    "datetime",
    "time",
    "timestamp",
    "date-formatting",
    "date-format",
    "date-manipulation",
    "date-utilities",
    "date-library",
    "human-readable",
    "natural-language",
    "relative-time",
    "time-ago",
    "time-difference",
    "days-between",
    "add-days",
    "subtract-days",
    "timezone",
    "timezone-conversion",
    "utc",
    "local-time",
    "leap-year",
    "age-calculation",
    "countdown",
    "week-number",
    "day-of-week",
    "month-name",
    "day-name",
    "first-day-of-month",
    "last-day-of-month",
    "weekend",
    "date-comparison",
    "moment-alternative",
    "dayjs-alternative",
    "date-fns-alternative",
    "javascript",
    "typescript",
    "nodejs",
    "browser",
    "ai-agent",
    "ai-friendly",
    "ai-integration",
    "autonomous-agent",
    "chatgpt",
    "claude",
    "code-generation",
    "copilot",
    "llm",
    "openai",
    "production-ready",
    "enterprise",
    "lightweight",
    "zero-dependencies"
  ],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
