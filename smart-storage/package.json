{
  "name": "@upendra.manike/smart-storage",
  "version": "1.0.2",
  "description": "Unified storage API for JavaScript/TypeScript - LocalStorage + SessionStorage + IndexedDB with TTL support for Browser, Node, and React Native. One API for all storage types with automatic expiration. Perfect for caching and data persistence.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "storage",
    "localStorage",
    "sessionStorage",
    "indexedDB",
    "cache",
    "ttl",
    "javascript",
    "typescript",
    "web-storage",
    "browser-storage",
    "local-storage",
    "session-storage",
    "storage-api",
    "storage-wrapper",
    "expiration",
    "storage-ttl",
    "cached-storage",
    "storage-utilities",
    "storage-library",
    "persistent-storage",
    "client-storage",
    "web-storage-api",
    "storage-manager"
  ],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
