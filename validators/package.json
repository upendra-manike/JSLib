{
  "name": "@upendra.manike/validators",
  "version": "1.0.2",
  "description": "Validation utilities for JavaScript/TypeScript - email, URL, phone, empty checks, type checks, and runtime detection. Comprehensive validation library for forms, APIs, and data validation. Lightweight and fast.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "validation",
    "email",
    "url",
    "phone",
    "validator",
    "javascript",
    "typescript",
    "email-validation",
    "url-validation",
    "phone-validation",
    "type-check",
    "runtime-detection",
    "is-email",
    "is-url",
    "is-phone",
    "validator-library",
    "input-validation",
    "form-validation",
    "data-validation",
    "type-validation",
    "js-validator",
    "ts-validator",
    "validation-tools"
  ],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
