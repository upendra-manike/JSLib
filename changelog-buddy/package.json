{
  "name": "@upendra.manike/changelog-buddy",
  "version": "1.0.2",
  "description": "Auto Changelog Generator for Git - Reads commits and generates markdown changelog with emojis + semver bump. Perfect for automation and CI/CD pipelines. Generate professional changelogs automatically.",
  "main": "./dist/index.js",
  "bin": {
    "changelog-buddy": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "ai-agent",
    "ai-friendly",
    "ai-integration",
    "auto-changelog",
    "automation",
    "automation-tools",
    "autonomous-agent",
    "changelog",
    "changelog-generator",
    "changelog-tool",
    "chatgpt",
    "ci-cd",
    "claude",
    "cli",
    "cli-tool",
    "code-generation",
    "copilot",
    "developer-tools",
    "git",
    "git-changelog",
    "git-commits",
    "github-actions",
    "javascript",
    "llm",
    "openai",
    "release-management",
    "release-notes",
    "semantic-versioning",
    "semver",
    "typescript",
    "version-bump"
  ],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
