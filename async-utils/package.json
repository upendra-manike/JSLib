{
  "name": "@upendra.manike/async-utils",
  "version": "1.0.4",
  "description": "Async control utilities for JavaScript/TypeScript: retry with exponential backoff, concurrency-limited queues, promise pools, sequential execution, timeout handling, abort signals. Perfect for API calls, data fetching, and async operations. AI-friendly and production-ready.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "async",
    "asynchronous",
    "promise",
    "promises",
    "async-await",
    "retry",
    "retry-logic",
    "exponential-backoff",
    "backoff",
    "concurrency",
    "concurrency-control",
    "concurrency-limit",
    "promise-pool",
    "promise-queue",
    "sequential",
    "parallel",
    "pMapSeries",
    "pMapLimit",
    "sleep",
    "delay",
    "timeout",
    "abort",
    "abort-signal",
    "abort-controller",
    "cancellable",
    "fetch-retry",
    "api-retry",
    "http-retry",
    "network-retry",
    "error-handling",
    "javascript",
    "typescript",
    "nodejs",
    "node-js",
    "browser",
    "ai-agent",
    "ai-friendly",
    "llm",
    "autonomous-agent",
    "code-generation",
    "chatgpt",
    "claude",
    "copilot",
    "utilities",
    "async-utilities",
    "promise-utilities",
    "production-ready",
    "enterprise",
    "lightweight",
    "zero-dependencies"
  ],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
