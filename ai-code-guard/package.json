{
  "name": "@upendra.manike/ai-code-guard",
  "version": "0.1.0",
  "description": "Heuristic linter for AI-generated JavaScript/TypeScript code. Detects common AI mistakes: missing await, swallowed errors, unsafe any, insecure eval, etc.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest",
    "clean": "rimraf dist"
  },
  "files": ["dist", "README.md"],
  "author": "Upendra Manike <upendra.manike@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upendra-manike/JSLib.git",
    "directory": "ai-code-guard"
  },
  "bugs": { "url": "https://github.com/upendra-manike/JSLib/issues" },
  "homepage": "https://github.com/upendra-manike/JSLib/tree/main/ai-code-guard#readme",
  "keywords": ["ai", "lint", "eslint", "javascript", "typescript", "code-quality", "jslib"],
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0",
    "rimraf": "^5.0.5"
  }
}
